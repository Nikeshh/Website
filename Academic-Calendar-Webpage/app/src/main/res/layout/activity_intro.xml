<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nikeshhbaskaran.academiccalendar.intro">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="118dp"
        android:layout_height="123dp"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/year2"
        android:layout_gravity="center_vertical|left"
        app:layout_anchorGravity="center_vertical|left" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="118dp"
        android:layout_height="123dp"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/year1"
        app:layout_anchorGravity="center_vertical|left"
        android:layout_gravity="center_vertical|right" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:text="Select your semester"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="Even Semester is tentative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="center" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="false"
        android:layout_marginTop="250px">

        <TextView
            android:text="PSG ACADEMIC CALENDAR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="25dp" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="false"
        android:layout_marginTop="900px"
        android:layout_gravity="bottom|left">

        <TextView
            android:text="Even Semester"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="false"
        android:layout_marginTop="900px"
        android:layout_marginLeft="500px"
        android:layout_gravity="bottom|right">

        <TextView
            android:text="Odd Semester"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />
    </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Token"
        android:id="@+id/button_show_token"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="130dp"/>

</android.support.design.widget.CoordinatorLayout>
